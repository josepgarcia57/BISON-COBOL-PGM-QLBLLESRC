     š* Cursor de Intervenientes
           EXEC SQL DECLARE CURINT    CURSOR FOR
             SELECT IDCONT
                  , IDINST
                  , NURACI
                  , CPGRE
                  , CPRUB
                  , CPMON
                  , CTID
                  , CTCONT
                  , NIFNIPC
                  , REFORIG
                  , TIPOREL
                  , DTINI
                  , DTFIM
                  , TYPER
                  , PERCENT
                  , CODERRO
                  , TMSCRIA
                  , USERCRIA
                  , TMSALT
                  , USERALT
             FROM  BPCJCINT  A
              WHERE  A.IDCONT  = :WS-IDCONT
                AND  A.IDINST  = :WS-IDINST
                AND  A.DTFIM   = "0001-01-01"
                AND  A.TIPOREL = "039"
                UNION ALL
             SELECT IDCONT
                  , IDINST
                  , NURACI
                  , CPGRE
                  , CPRUB
                  , CPMON
                  , CTID
                  , CTCONT
                  , NIFNIPC
                  , REFORIG
                  , TIPOREL
                  , DTINI
                  , DTFIM
                  , TYPER
                  , PERCENT
                  , CODERRO
                  , TMSCRIA
                  , USERCRIA
                  , TMSALT
                  , USERALT
             FROM  BPCJCINT  B
              WHERE  B.IDCONT  = :WS-IDCONT
                AND  B.IDINST  = :WS-IDINST
                AND  B.DTFIM   = "0001-01-01"
                AND B.TIPOREL  = "008"
                AND NOT EXISTS
                    ( SELECT 1
                      FROM BPCJCINT X
                         WHERE X.IDCONT =  B.IDCONT
                          AND  X.IDINST =  B.IDINST
                          AND  X.NIFNIPC = B.NIFNIPC
                          AND  X.TIPOREL = "039" )
           END-EXEC.

