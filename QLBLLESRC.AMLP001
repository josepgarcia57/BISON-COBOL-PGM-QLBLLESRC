     š*--Selecção de Todas Contas DO's com ou sem saldo e não anuladas
     š*--Mesmo Critérios de Clientes Activos
           EXEC SQL DECLARE CURAML001 CURSOR FOR
               SELECT  DISTINCT A.CPRACI
                   FROM FDBCLI C
                   INNER JOIN   FDBCPT  A
                   ON (     A.CPRACI = C.CLRACI
                        AND
                             "20"
                            ||SUBSTR(CPDTOU, 5, 2 )||"-"
                            ||SUBSTR(CPDTOU, 3, 2 )||"-"
                            ||SUBSTR(CPDTOU, 1, 2 )
                            >= :WS-DTINIISO
                      )

               LEFT JOIN FDBTAB D
                  ON (     D.TBID   = "005"
                       AND D.TBCODE = C.CLTYPE  )

               LEFT JOIN FDBTAB X
                  ON (     X.TBID   = "030"
                      AND  X.TBCODE = A.CPGRE  )
               WHERE
                           C.CLRACI > "0100000"
               AND  SUBSTR(C.CLRACI , 1 , 1 ) <> "1"
               AND  SUBSTR(C.CLRACI , 1 , 1 ) <> "8"
               AND  C.CLTYPE <> "C"
               AND  C.CLTYPE <> "T"
               AND  C.CLTYPE <> "Q"
               AND  C.CLTYPE <> "H"
               AND  C.CLTYPE <> "I"

               AND ( CLDTAN  = " "      OR
                     CLDTAN  = "000000" OR
                    "20"
                  ||SUBSTR(CLDTOU, 5, 2 ) || "-"
                  ||SUBSTR(CLDTOU, 3, 2 ) || "-"
                  ||SUBSTR(CLDTOU, 1, 2 )
                  >= :WS-DTINIISO )

           END-EXEC.

           EXEC SQL END  DECLARE SECTION END-EXEC.
