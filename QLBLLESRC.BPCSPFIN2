     š* Cursor de Protecções
           EXEC SQL DECLARE CURPRT    CURSOR FOR
             SELECT A.DTREFPROT
                  , A.IDCONT
                  , A.IDINST
                  , A.IDPROT
                  , A.RACI
                  , A.GRE
                  , A.RUB
                  , A.MON
                  , A.IDENT
                  , A.TYPER
                  , A.ESTCTR
                  , A.ESTCPT
                  , A.EST300
                  , A.VALPROT
                  , A.CAPITAL
                  , A.CAMBIO
                  , A.DTMATPROT
                  , A.NUM301
                  , A.EST301
                  , A.NUM302
                  , A.EST302
                  , A.NUM303
                  , A.EST303
                  , A.NUM304
                  , A.EST304
                  , A.NUM305
                  , A.EST305
                  , A.NUM307
                  , A.EST307
                  , A.NUM308
                  , A.EST308
                  , A.NUM309
                  , A.EST309
             FROM  BPCJCPRTI  A
             INNER JOIN BPCJCPRT B
              ON ( A.IDPROT = B.IDPROT )
              WHERE  A.IDCONT = :WS-IDCONT
                AND  A.IDINST = :WS-IDINST
                AND  A.ESTCPT <> "A"
           END-EXEC.

           EXEC SQL END  DECLARE SECTION END-EXEC.
