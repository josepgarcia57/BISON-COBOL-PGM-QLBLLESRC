     š*----------------------------------------------------------------
       P500-INSERT-BPCJPFIN2.
     š*----------------------------------------------------------------
     š*- Verifica se o Registo Já Existe
     š*-
           MOVE WS-TMS-NULA  TO PFIN2-TMSALT
           EXEC SQL
                 INSERT INTO BPCJPFIN2
                 VALUES ( :PFIN2-IDCONT
                        , :PFIN2-IDINST
                        , :PFIN2-IDPROT
                        , :PFIN2-VALPROT
                        , :PFIN2-CREDPRIOR
                        , :PFIN2-INDEXECPRT
                        , :PFIN2-VALEXECPRT
                        , :PFIN2-TMSCRIA
                        , :PFIN2-USERCRIA
                        , :PFIN2-TMSALT
                        , :PFIN2-USERALT )
           END-EXEC.

           MOVE SQLCODE  TO  W-SQLCODE, W-EDTSQLC.

           EVALUATE TRUE
           WHEN SQLCODE-OK
             CONTINUE
           WHEN OTHER
              MOVE "BPCJPFIN2"         TO W-OBJECT-NAME
              SET CMD-INSERT           TO TRUE
              PERFORM  P990-ERRO-DB2
           END-EVALUATE.
     š*----------------------------------------------------------------
       P402-OPEN-CURSOR-PRT.
     š*----------------------------------------------------------------
     š*-
           INITIALIZE  R-JCPRTI

           EXEC SQL
                OPEN CURPRT
           END-EXEC.

           MOVE SQLCODE  TO  W-SQLCODE, W-EDTSQLC.

           EVALUATE TRUE
           WHEN SQLCODE-OK
              SET  INICIO-CURPRT       TO TRUE
           WHEN OTHER
              SET  FIM-CURPRT          TO TRUE
              MOVE "CURPRT"            TO W-OBJECT-NAME
              SET CMD-OPEN-CURSOR      TO TRUE
              PERFORM  P990-ERRO-DB2
           END-EVALUATE.
     š*-
     š*----------------------------------------------------------------
       P402-TRATA-CURSOR-PRT.
     š*----------------------------------------------------------------
     š*-
           PERFORM P400-MOVE-BPCJPFIN2.
           PERFORM P500-INSERT-BPCJPFIN2.
           PERFORM P402-FETCH-CURSOR-PRT.
     š*-
     š*----------------------------------------------------------------
       P402-FETCH-CURSOR-PRT.
     š*----------------------------------------------------------------
     š*-
           EXEC SQL FETCH CURPRT
             INTO  :BPCJCPRTI.DTREFPROT
                  ,:BPCJCPRTI.IDCONT
                  ,:BPCJCPRTI.IDINST
                  ,:BPCJCPRTI.IDPROT
                  ,:BPCJCPRTI.RACI
                  ,:BPCJCPRTI.GRE
                  ,:BPCJCPRTI.RUB
                  ,:BPCJCPRTI.MON
                  ,:BPCJCPRTI.IDENT
                  ,:BPCJCPRTI.TYPER
                  ,:BPCJCPRTI.ESTCTR
                  ,:BPCJCPRTI.ESTCPT
                  ,:BPCJCPRTI.EST300
                  ,:BPCJCPRTI.VALPROT
                  ,:BPCJCPRTI.CAPITAL
                  ,:BPCJCPRTI.CAMBIO
                  ,:BPCJCPRTI.DTMATPROT
                  ,:BPCJCPRTI.NUM301
                  ,:BPCJCPRTI.EST301
                  ,:BPCJCPRTI.NUM302
                  ,:BPCJCPRTI.EST302
                  ,:BPCJCPRTI.NUM303
                  ,:BPCJCPRTI.EST303
                  ,:BPCJCPRTI.NUM304
                  ,:BPCJCPRTI.EST304
                  ,:BPCJCPRTI.NUM305
                  ,:BPCJCPRTI.EST305
                  ,:BPCJCPRTI.NUM307
                  ,:BPCJCPRTI.EST307
                  ,:BPCJCPRTI.NUM308
                  ,:BPCJCPRTI.EST308
                  ,:BPCJCPRTI.NUM309
                  ,:BPCJCPRTI.EST309
           END-EXEC.

           MOVE SQLCODE  TO  W-SQLCODE, W-EDTSQLC.

           EVALUATE TRUE
           WHEN SQLCODE-OK
              CONTINUE
           WHEN SQLCODE-NOTFOUND
              SET   FIM-CURPRT       TO TRUE
           WHEN OTHER
              SET   FIM-CURPRT       TO TRUE
              MOVE "CURPRT"          TO W-OBJECT-NAME
              SET   CMD-FETCH-CURSOR TO TRUE
              PERFORM  P990-ERRO-DB2
           END-EVALUATE.
     š*-
     š*----------------------------------------------------------------
       P402-CLOSE-CURSOR-PRT.
     š*----------------------------------------------------------------
     š*-
           EXEC SQL
               CLOSE CURPRT
           END-EXEC.

           MOVE SQLCODE  TO  W-SQLCODE, W-EDTSQLC.

           EVALUATE TRUE
           WHEN SQLCODE-OK
              SET     FIM-CURPRT       TO TRUE
           WHEN OTHER
              SET     FIM-CURPRT       TO TRUE
              MOVE "CURCTR"            TO W-OBJECT-NAME
              SET CMD-CLOSE-CURSOR     TO TRUE
              PERFORM  P990-ERRO-DB2
           END-EVALUATE.
     š*-
     š*----------------------------------------------------------------
       P450-VALIDA-DATE.
     š*----------------------------------------------------------------
     š*-
           EXEC SQL
               SET :WS-VAL-DATE  = DATE(:WS-TST-DATE)
           END-EXEC
           EVALUATE SQLCODE
              WHEN +0
                  MOVE  WS-TST-DATE TO WS-OUT-DATE
              WHEN -180
                  MOVE "0001-01-01" TO WS-OUT-DATE
           END-EVALUATE.
     š*-
     š*----------------------------------------------------------------
       P400-GET-DIVIDA-INST.
     š*----------------------------------------------------------------
     š*-
           EXEC SQL
                SELECT
                        COMDESPBAL
                     ,  COMDESPEXP
                     ,  JURCORR
                     ,  JURVENCBAL
                     ,  JURVENCEXT
                     ,  MONTABATV
                     ,  MPOTIRREV
                     ,  MPOTREV
                     ,  MONTVENC
                     ,  MONTVIVO

                INTO
                       :COMDESPBAL
                     , :COMDESPEXP
                     , :JURCORR
                     , :JURVENCBAL
                     , :JURVENCEXT
                     , :MONTABATV
                     , :MPOTIRREV
                     , :MPOTREV
                     , :MONTVENC
                     , :MONTVIVO
                FROM  BPCJPFIN  A
                WHERE A.IDCONT  = :WS-IDCONT
                 AND  A.IDINST  = :WS-IDINST
           END-EXEC.

           MOVE SQLCODE  TO  W-SQLCODE, W-EDTSQLC.

           EVALUATE TRUE
           WHEN SQLCODE-OK
              CONTINUE
           WHEN OTHER
              MOVE "BPCJPFIN"          TO W-OBJECT-NAME
              SET CMD-SELECT           TO TRUE
              PERFORM  P990-ERRO-DB2
           END-EVALUATE.
      *- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - *
       P990-ERRO-DB2.
      *- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - *

           MOVE  SQLCODE                 TO  W-SQLCODE

           EVALUATE TRUE
           WHEN SQLCODE-NOTFOUND
                  STRING "ERRO DE DADOS: CHAVE INEXISTENTE NA TABELA <"
                                                  DELIMITED BY SIZE
                         W-OBJECT-NAME            DELIMITED BY SPACE
                         ">"                      DELIMITED BY SIZE
                  INTO MSG-ERRO-SQL
           WHEN SQLCODE-DUPLKEY
                 STRING "ERRO DE DADOS: CHAVE JÁ EXISTENTE NA TABELA <"
                                                  DELIMITED BY SIZE
                        W-OBJECT-NAME             DELIMITED BY SPACE
                        ">"                       DELIMITED BY SIZE
                   INTO MSG-ERRO-SQL
           WHEN SQLCODE-URESOURC
                STRING "ERRO DE SISTEMA: TABELA <"
                                                  DELIMITED BY SIZE
                       W-OBJECT-NAME              DELIMITED BY SPACE
                       "> INDISPONÍVEL. CONTACTE RESPONSÁVEL"
                                                  DELIMITED BY SIZE
                  INTO MSG-ERRO-SQL
           WHEN SQLCODE-DLKTMOUT
               STRING "INFO: TABELA <"            DELIMITED BY SIZE
                      W-OBJECT-NAME               DELIMITED BY SPACE
                      "> MOMENTANEAMENTE INDISPONÍVEL. TENTE DE NOVO"
                                                  DELIMITED BY SIZE
                 INTO MSG-ERRO-SQL
           WHEN OTHER
               STRING "ERRO: OBJECTO <"           DELIMITED BY SIZE
                      W-OBJECT-NAME               DELIMITED BY SPACE
                      ">, FUNCAO <"               DELIMITED BY SIZE
                      W-CMDEXEC                   DELIMITED BY SPACE
                      ">, C/ SQLCODE <"
                      W-EDTSQLC
                      ">."                        DELIMITED BY SIZE
                      INTO MSG-ERRO-SQL
           END-EVALUATE.
